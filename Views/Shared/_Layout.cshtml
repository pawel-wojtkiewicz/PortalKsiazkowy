<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal Książkowy</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <!-- Menu główne -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Portal Książkowy</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Book">Przeglądaj Książki</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Recommendations" asp-controller="Book">Moje Rekomendacje</a>
                        </li>
                    } 
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ManageBooks" asp-controller="Admin">Zarządzaj Książkami</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <!-- Główna zawartość strony -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>