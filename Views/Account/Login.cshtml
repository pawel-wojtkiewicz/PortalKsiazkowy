@model PortalKsiazkowy.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Zaloguj się";
}

<div class="container">
    <h1 class="my-4 text-center">Zaloguj się</h1>

    <div class="col-md-6 mx-auto">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label">Nazwa użytkownika</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Hasło</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100">Zaloguj się</button>
            </div>

            <div class="text-center">
                <p>Nie masz konta? <a href="@Url.Action("Register", "Account")">Zarejestruj się</a></p>
            </div>
        </form>
    </div>
</div>

